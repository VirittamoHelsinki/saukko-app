        "prettier": "^2.8.8",
        "ts-jest": "^29.1.2"
    },
    "lint-staged": {
        "*.{js,jsx}": [
            "prettier --write"
        ]
    },
    "dependencies": {
        "concurrently": "^7.6.0",
        "hds-react": "^2.16.0",
        "react-icons": "^4.10.1",
        "react-scroll": "^1.8.9",
        "react-swipeable-views": "^0.14.0"
